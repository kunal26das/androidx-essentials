<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="androidx.essentials.playground.network.NetworkViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:overScrollMode="never"
        tools:paddingVertical="0dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:paddingVertical="16dp">

            <androidx.essentials.io.TextInput
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="@string/available"
                android:inputType="textCapSentences"
                app:editable="false"
                app:text="@{viewModel.isNetworkAvailable()}"
                app:visible="@{viewModel.isNetworkAvailable() != null}" />

            <androidx.essentials.io.TextInput
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="@string/blocked"
                app:editable="false"
                app:text="@{viewModel.isNetworkBlocked()}"
                app:visible="@{viewModel.isNetworkBlocked() != null}" />

            <androidx.essentials.io.TextInput
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="@string/capabilities"
                app:editable="false"
                app:text="@{viewModel.networkCapabilities}"
                app:visible="@{viewModel.networkCapabilities != null}" />

            <androidx.essentials.io.TextInput
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="@string/link_properties"
                app:editable="false"
                app:text="@{viewModel.networkLinkProperties}"
                app:visible="@{viewModel.networkLinkProperties != null}" />

            <androidx.essentials.io.TextInput
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="@string/time_to_live"
                app:editable="false"
                app:text="@{viewModel.maxTimeToLive}"
                app:visible="@{viewModel.maxTimeToLive != null}" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</layout>