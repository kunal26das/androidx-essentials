<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="androidx.essentials.playground">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".PlayGround"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar"
        tools:ignore="AllowBackup">

        <activity
            android:name="androidx.essentials.playground.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".autocomplete.AutoCompleteActivity" />
        <activity android:name=".chips.ChipsActivity" />
        <activity android:name=".datastore.DataStoreActivity" />
        <activity android:name=".datetime.DateTimePickerActivity" />
        <activity android:name=".firebase.FirebaseActivity" />
        <activity android:name=".location.LocationActivity" />
        <activity android:name=".preferences.SharedPreferencesActivity" />
        <activity android:name=".textfield.TextFieldActivity" />
    </application>
</manifest>