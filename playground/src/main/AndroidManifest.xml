<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="androidx.essentials.playground">

    <application
        android:name=".PlayGround"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/DayNightStyle"
        tools:ignore="AllowBackup">
        <activity
            android:name="androidx.essentials.playground.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="androidx.essentials.playground.home.HomeActivity">
            <nav-graph android:value="@navigation/navigation_play_ground" />
        </activity>
    </application>

</manifest>